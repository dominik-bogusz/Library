<Page x:Class="Library.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Button Click="SingIn" Content="Zaloguj się" HorizontalAlignment="Center" Height="39" Margin="0,334,0,0" VerticalAlignment="Top" Width="224" Background="#FFFFA624" FontSize="16" FontWeight="Bold" Cursor="Hand"/>
        <PasswordBox Name="Password" HorizontalAlignment="Center" Height="38" Margin="0,238,0,0" VerticalAlignment="Top" Width="320" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="10,10,10,10"/>
        <TextBox Name="Username" HorizontalAlignment="Center" Height="39" Margin="0,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" TextAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="10,10,10,10"/>
        <TextBlock HorizontalAlignment="Center" Height="50" Margin="0,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" TextAlignment="Center" FontSize="24" FontWeight="Bold"><Run Language="pl-pl" Text="Biblioteka"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="240,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="42"><Run Text="Login"/><Run Language="pl-pl" Text=":"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="240,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74"><Run Language="pl-pl" Text="Hasło"/><Run Text=":"/></TextBlock>
        <TextBlock Height="23" HorizontalAlignment="Center" x:Name ="errormessage" VerticalAlignment="Top" Width="195" Margin="0,292,0,0"  OpacityMask="Crimson" Foreground="#FFE5572C" TextAlignment="Center"  Text=""  />
    </Grid>
</Page>
