      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAuthor">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="50" Margin="0,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" TextAlignment="Center" FontSize="24" FontWeight="Bold"><Run Language="pl-pl" Text="Dodaj Autora"/></TextBlock>
        <Button x:Name="Return" Content="Powrót" HorizontalAlignment="Center" Margin="0,378,0,0" VerticalAlignment="Top" Click="Return_Click" Height="34" Width="66" Background="White" FontWeight="Bold"/>
        <TextBox Name="AuthorName" HorizontalAlignment="Center" Height="39" Margin="0,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" TextAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="10,10,10,10"/>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="240,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="42"><Run Language="pl-pl" Text="Imię"/><Run Text=":"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="240,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74"><Run Language="pl-pl" Text="Nazwisko"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="AuthorSurname" HorizontalAlignment="Center" Height="39" Margin="0,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" TextAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Padding="10,10,10,10"/>
        <Button Click="BookAdd_Click" Content="Dodaj" HorizontalAlignment="Center" Height="39" Margin="0,309,0,0" VerticalAlignment="Top" Width="224" Background="#FFFFA624" FontSize="16" FontWeight="Bold" Cursor="Hand"/>
    </Grid>
</Page>
