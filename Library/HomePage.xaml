<Page x:Class="Library.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <Button x:Name="SearchBtn" Click="ShowBooks_Click" Content="Pokaż książki" HorizontalAlignment="Center" Height="39" Margin="0,162,0,0" VerticalAlignment="Top" Width="224" Background="#FFFFA624" FontSize="16" FontWeight="Bold" Cursor="Hand"/>
        <Button x:Name="addBtn" Click="AddBook_Click" Content="Dodaj Autora" HorizontalAlignment="Center" Height="39" Margin="0,234,0,0" VerticalAlignment="Top" Width="224" Background="#FFFFA624" FontSize="16" FontWeight="Bold" Cursor="Hand"/>
        <Button x:Name="logut" Click="Logout_Click" Content="Wyloguj się" HorizontalAlignment="Center" Height="39" Margin="0,301,0,0" VerticalAlignment="Top" Width="224" Background="#FF7026BF" FontSize="16" FontWeight="Bold" Cursor="Hand" Foreground="#FFE8E8E8"/>
    </Grid>
</Page>
